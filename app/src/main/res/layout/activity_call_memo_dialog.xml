<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/id_text_view_dialog_person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:hint="Person Name"
        android:textSize="28sp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_image_view_dialog_call_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:alpha="0.5"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_call_missed_black_48dp" />

        <TextView
            android:id="@+id/id_text_view_dialog_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:hint="12:00"
            android:textSize="22sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_text_view_dialog_result_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/conversation_result"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/id_edit_text_dialog_call_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Your memo here"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:minHeight="96dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_button_dialog_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="left"
            android:text="Skip"
            android:background="@drawable/button_shape_normal"
            android:textColor="@drawable/button_text_color"
            />

        <Button
            android:id="@+id/id_button_dialog_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_weight="0.3"
            android:layout_gravity="right"
            android:focusable="true"
            android:text="Save"
            android:background="@drawable/button_shape"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>


</LinearLayout>

