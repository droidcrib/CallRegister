<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_height"
    android:paddingTop="8dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_alarm_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/regular_offset"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@drawable/ic_person_black_48dp"
        fresco:roundAsCircle="true"
        />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="72dp">

        <TextView
            android:id="@+id/id_tv_alarm_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:hint="Person Name"
            android:textSize="16sp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_image_view_call_type"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:src="@drawable/ic_call_missed_black_48dp" />

            <TextView
                android:id="@+id/id_tv_note_short"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="sans-serif"
                android:hint="12:00"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/id_image_view_details"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:alpha="0.5"
        android:clickable="true"
        android:padding="4dp"
        android:src="@drawable/ic_comment_black_48dp"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/id_image_view_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/id_image_view_details"
        android:alpha="0.5"
        android:clickable="false"
        android:padding="8dp"
        android:visibility="visible" />




</RelativeLayout>