<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingTop="8dp">


    <ImageView
        android:id="@+id/id_image_view_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha="0.2"
        android:maxHeight="42dp"
        android:maxWidth="42dp"
        android:minHeight="42dp"
        android:minWidth="42dp"
        android:layout_marginLeft="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_person_black_48dp" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="72dp">

        <TextView
            android:id="@+id/id_text_view_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:hint="Person Name"
            android:textSize="16sp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_image_view_call_type"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:src="@drawable/ic_call_missed_black_48dp" />

            <TextView
                android:id="@+id/id_text_view_call_time"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="sans-serif"
                android:hint="12:00"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/id_image_view_details"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:alpha="0.5"
        android:clickable="true"
        android:padding="4dp"
        android:src="@drawable/ic_navigate_next_black_48dp" />


    <ImageView
        android:id="@+id/id_image_view_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/id_image_view_details"
        android:alpha="0.5"
        android:clickable="false"
        android:padding="8dp"
        android:src="@drawable/ic_comment_black_48dp"
        android:visibility="invisible" />

    <!--<ImageView-->
    <!--android:id="@+id/image_view_menu"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:paddingRight="16dp"-->
